@model IdentityRole
@{
    ViewData["Title"] = "Details";
    var UsersInRole = (List<UserInRoleViewModel>) ViewData["UsersInRole"];
}

<h1>Role Details</h1>
<br />
<br />
<form class="container">
    <div class="row">
        <div class=" col-md-6 text-center">
            <label  class="form-control-label">Role Name</label>
            <input asp-for="Name" class="form-control text-center" readonly/>
        </div>
        <div class=" col-md-6 text-center">
            <label  class="form-control-label">Role Id</label>
            <input asp-for="Id" class="form-control text-center" readonly/>
        </div>

    </div>
    <br />
    <br />
    <br />
        <table class = "table table-striped table-hover text-center">
            <thead>
                <tr class="text-center">
                    <th class="text-center col-md-6">Assigned User Name</th>
                    <th class="text-center col-md-6">Assigned User Id</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in UsersInRole)
            {
                    <tr class="text-center">
                        <td class="text-center col-md-6">@item.UserName</td>
                        <td class="text-center col-md-6">@item.UserId</td>
                    </tr>
                
            }
            </tbody>
    </table>
    <br />
    <div>
        <a class="btn btn-success" asp-action="Edit" asp-controller="Role" asp-route-id="@Model.Id.ToString()">Edit</a>
        <a class="btn btn-light" asp-action="Index" asp-controller="Role">Back To List</a>
    </div>
</form>

