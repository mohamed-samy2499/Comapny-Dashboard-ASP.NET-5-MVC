
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
    
}
<h1>All Roles</h1>
<br />
<br />
<a asp-action = "Create" class = "btn btn-primary">Add New Role</a>
<br />
<br />


@if(Model?.Count() >0)
{
<div>
    <table class = "table table-striped table-hover text-center">
        <thead>
            <tr class="text-center">
                <th class="text-center">@Html.DisplayNameFor(m => m.Id)</th>
                <th class="text-center">@Html.DisplayNameFor(m => m.Name)</th>

                <th class="text-center">Details</th>
                <th class="text-center">Update</th>
                <th class="text-center">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
           {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    
                    <td>
                        <a  class = "btn btn-info text-center" asp-action="Details" asp-controller = "Role" asp-route-id="@item.Id.ToString()">
                            <i class = "fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a  class = "btn btn-success" asp-action="Edit" asp-controller = "Role" asp-route-id="@item.Id.ToString()">
                            <i class = "fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a  class = "btn btn-danger" asp-action="Delete" asp-controller = "Role" asp-route-id="@item.Id.ToString()">
                            <i class = "fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
                
           }
        </tbody>
    </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        <h3 >No Roles Found!</h3>
    </div>
}
