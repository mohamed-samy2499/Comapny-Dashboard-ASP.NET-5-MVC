@model IdentityRole
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit Role</h1>
<br />
<br />
<form asp-action = "Edit">
    <input hidden asp-for="Id" />
    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>

    </div>
      <div>
            <br />
            <a asp-action="AddOrRemoveUsers" asp-controller="Role" asp-route-RoleId="@Model.Id.ToString()" class="btn btn-info">Add or Remove Users</a>
            <br />
            <br />
        </div>

    <input type="submit" class="btn btn-primary" value="Update" />
    <a asp-action="Index" class="btn btn-light">Return to Roles</a>
</form>
