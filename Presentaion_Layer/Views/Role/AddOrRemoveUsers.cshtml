@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Or Remove Users</h2>
<form method="post" class="form-control">

        @*@foreach (var user in Model)*@
        @for(int i=0;i<Model.Count;i++)
        {
            <div>
                <input type="checkbox" asp-for="@Model[i].IsSelected" class="form-control filled-in"/>
                <label asp-for="@Model[i].IsSelected" class="form-control-label">@Model[i].UserName</label>
                <input asp-for="@Model[i].UserId" hidden/>
                <input asp-for="@Model[i].UserName" hidden/>
            </div>
       }
       <div>
            <input type="submit" class = "btn btn-primary" value="Save"/>
            <a asp-action="Index" class="btn btn-light">Return to Roles</a>


       </div>
</form>
